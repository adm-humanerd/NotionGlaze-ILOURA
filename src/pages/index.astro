---
import Layout from '../layouts/Layout.astro';
import NotionRenderer from '../components/Glaze/NotionRenderer.astro';
import { fetchStrapi } from "../utils/strapi";

// 1. Home 데이터 가져오기
const homeData = await fetchStrapi('single-pages?filters[Slug][$eq]=home&populate=*');
const homePage = homeData && homeData.length > 0 ? homeData[0] : null;

// 2. 최신 글 가져오기
const recentPosts = await fetchStrapi('post-pages?sort=publishedAt:desc&pagination[limit]=3&populate=*');

// 3. [추가] 썸네일 이미지 추출 함수
const getCoverImage = (post: any) => {
  if (!post) return null;
  const cover = post.Cover;
  if (!cover) return null;
  
  // Notion 데이터 (External/File)
  if (cover.type === 'external') return cover.external?.url;
  if (cover.type === 'file') return cover.file?.url;
  
  // Strapi 미디어
  if (cover.url) return cover.url;
  if (cover.data?.attributes?.url) return cover.data.attributes.url;

  return null;
};
---

<Layout title="Home">
  
  {/* 1. Hero Section (제목 영역) - 기존 유지 */}
  <section class="relative bg-white pt-20 pb-12 md:pt-32 md:pb-20 overflow-hidden">
    <div class="max-w-5xl mx-auto px-6 relative z-10 text-center">
      
      <span class="inline-block py-1 px-3 rounded-full bg-slate-100 text-slate-500 text-xs font-bold uppercase tracking-wider mb-6">
        Welcome
      </span>

      <h1 class="text-4xl md:text-6xl font-black text-slate-900 leading-tight mb-8 tracking-tight whitespace-pre-wrap">
        {homePage ? homePage.Title : "NotionGlaze"}
      </h1>

      <div class="flex flex-col md:flex-row items-center justify-center gap-4 mb-12">
        <a href="/blog" class="px-8 py-4 bg-primary text-white font-bold rounded-full text-lg hover:opacity-90 transition-opacity shadow-lg shadow-primary/30 w-full md:w-auto">
          블로그 보기
        </a>
      </div>
    </div>
  </section>

  {/* 2. Notion Content Section - 기존 유지 */}
  {homePage && homePage.Content ? (
    <section class="pb-20 bg-white">
        <div class="max-w-6xl mx-auto px-6 notion-renderer text-slate-700 leading-relaxed font-sans">
             <NotionRenderer blocks={homePage.Content} />
        </div>
    </section>
  ) : (
    <div class="text-center py-20 text-slate-400">노션에서 'home' 페이지 내용을 작성해주세요.</div>
  )}

  {/* 3. 최신 글 섹션 (썸네일 적용 수정됨) */}
  {recentPosts && recentPosts.length > 0 && (
    <section class="py-20 bg-slate-50 border-t border-slate-200">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-3xl font-black text-slate-900">Recent Posts</h2>
          <a href="/blog" class="text-primary font-bold hover:underline">View all posts →</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recentPosts.map((post: any) => {
            const coverUrl = getCoverImage(post);

            return (
                <a href={`/post/${post.Slug}`} class="group block bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 hover:-translate-y-1">
                  
                  {/* 이미지 영역 */}
                  <div class="bg-slate-100 aspect-video relative overflow-hidden border-b border-slate-50">
                     {coverUrl ? (
                        <img 
                            src={coverUrl} 
                            alt={post.Title} 
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
                        />
                     ) : (
                         <div class="w-full h-full flex items-center justify-center group-hover:scale-105 transition-transform duration-500 text-slate-300 bg-slate-50">
                            <span class="text-4xl">✍️</span>
                         </div>
                     )}
                     {/* 호버 오버레이 */}
                     <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300"></div>
                  </div>

                  {/* 텍스트 영역 */}
                  <div class="p-6">
                      <h3 class="text-lg font-bold text-slate-900 mb-2 group-hover:text-primary transition-colors line-clamp-2 leading-snug">
                        {post.Title}
                      </h3>
                      <p class="text-sm text-slate-500 font-medium">
                        {new Date(post.publishedAt).toLocaleDateString()}
                      </p>
                  </div>
                </a>
            );
          })}
        </div>
      </div>
    </section>
  )}
</Layout>
